# Manual management of external displays
# Set the shortcuts and what they do
set $mode_display [l]aptop [h]dmi [d]p
bindsym $mod+o mode "$mode_display"

mode "$mode_display" {
	bindsym	l exec --no-startup-id xrandr --output eDP --primary --mode 2240x1400 \
                   --output HDMI-A-0 --off --output DisplayPort-0 --off --output DisplayPort-1 --off \
                   && nitrogen --restore && ~/.config/polybar/launch.sh && xdotool key Escape

	# back to normal: Enter or Escape
	bindsym Return mode "default"
	bindsym Escape mode "default"
}
